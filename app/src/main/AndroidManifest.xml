<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zwstudio.lolly.android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".LollyApplication_"
        android:usesCleartextTraffic="true">
        <!--android:networkSecurityConfig="@xml/network_security_config">-->
        <activity
            android:name=".DrawerActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".words.WordsDictActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".words.WordsUnitDetailActivity_"
            android:label="@string/words_unit_detail"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".words.WordsUnitBatchActivity_"
            android:label="@string/words_unit_batch"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".phrases.PhrasesUnitDetailActivity_"
            android:label="@string/phrases_unit_detail"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".phrases.PhrasesUnitBatchActivity_"
            android:label="@string/phrases_unit_batch"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".words.WordsLangDetailActivity_"
            android:label="@string/words_lang_detail"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".phrases.PhrasesLangDetailActivity_"
            android:label="@string/phrases_lang_detail"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".words.WordsTextbookDetailActivity_"
            android:label="@string/words_textbook_detail"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".phrases.PhrasesTextbookDetailActivity_"
            android:label="@string/phrases_textbook_detail"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".patterns.PatternsDetailActivity_"
            android:label="@string/patterns_detail"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".patterns.PatternsWebPagesBrowseActivity_"
            android:label="@string/patterns_webpages_browse"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".patterns.PatternsWebPagesListActivity_"
            android:label="@string/patterns_webpages_list"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".patterns.PatternsWebPageDetailActivity_"
            android:label="@string/patterns_webpage_detail"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
    </application>
    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

</manifest>
