<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zwstudio.lolly.android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".LollyApplication_">
        <activity
            android:name=".SearchActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity_"
            android:label="@string/settings"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".WordsUnitActivity_"
            android:label="@string/words_unit"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".WordsTextbookActivity_"
            android:label="@string/words_textbook"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".WordsLangActivity_"
            android:label="@string/words_lang"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".WordsDictActivity_"
            android:label="@string/word"
            android:theme="@style/AppTheme"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".PhrasesUnitActivity_"
            android:label="@string/phrases_unit"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".PhrasesLangActivity_"
            android:label="@string/phrases_lang"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="fullSensor">
        </activity>
    </application>

</manifest>
