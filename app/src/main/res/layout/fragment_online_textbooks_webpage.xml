<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".onlineTextbooks.OnlineTextbooksFragment">

    <data>
        <variable name="model" type="com.zwstudio.lolly.viewmodels.onlinetextbooks.OnlineTextbooksDetailViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvOnlineTextbook"
            android:text="@{model.item.title}"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_text2"
            android:textColor="@color/white"
            android:gravity="center"
            tools:text="ABCD"
            app:layout_constraintTop_toTopOf="parent" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOnlineTextbook"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>