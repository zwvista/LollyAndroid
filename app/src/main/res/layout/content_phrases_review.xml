<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".phrases.PhrasesReviewFragment">

    <data>
        <variable name="model" type="com.zwstudio.lolly.data.phrases.PhrasesReviewViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvIndex"
                        android:text="@{model.indexString}"
                        android:visibility="@{model.indexIsVisible}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/tvCorrect"
                        android:text="@string/text_correct"
                        android:visibility="@{model.correctIsVisible}"
                        android:textColor="@color/color_correct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/tvIncorrect"
                        android:text="@string/text_incorrect"
                        android:visibility="@{model.incorrectIsVisible}"
                        android:textColor="@color/color_incorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnNewTest"
                        android:text="@string/text_new_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"/>

                    <Button
                        android:id="@+id/btnCheck"
                        android:text="@{model.checkString}"
                        android:enabled="@{model.checkEnabled}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPhraseTarget"
                    android:text="@{model.phraseTargetString}"
                    android:visibility="@{model.phraseTargetIsVisible}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/text_size3"/>
                <TextView
                    android:id="@+id/tvTranslation"
                    android:text="@{model.translationString}"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
                <EditText
                    android:id="@+id/etPhraseInput"
                    android:text="@={model.phraseInputString}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <CheckBox
                    android:id="@+id/chkSpeak"
                    android:checked="@{model.checkEnabled}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/text_speak"/>
            </RelativeLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</layout>
